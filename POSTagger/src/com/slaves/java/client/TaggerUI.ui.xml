<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<div class="main">
		    <div ui:field="sidebar">
		        <g:ListBox ui:field="POSListBox">
		            <g:item>Nouns</g:item>
		            <g:item>Verbs</g:item>
		            <g:item>Adjectives</g:item>
		            <g:item>Adverbs</g:item>
		            <g:item>Prepositions</g:item>
		            <g:item>Articles</g:item>
		        </g:ListBox>
		    </div>
		    <div id="textFrame">
				<g:TextArea ui:field="text"/>
				<div ui:field="taggedTextArea"></div>
			</div>
			<div id="submitButton">
				<g:Button ui:field="submit">Tag my text</g:Button>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>